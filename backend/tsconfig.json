{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "../dist/backend",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "paths": {
            "@daos/*": [
                "src/daos/*"
            ],
            "@entities/*": [
                "src/entities/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ],
            "@server": [
                "src/Server"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "spec/**/*.ts"
    ]
}
